{
  "name": "standardschema",
  "version": "0.10.8",
  "description": "Library for validating data with Standard Schema",
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "prettier": "prettier --single-quote --no-semi --write",
    "lint": "tslint \"src/**/*.ts\" --project tsconfig.json",
    "format": "npm run prettier -- \"src/**/*.ts\"",
    "build": "rimraf dist && tsc",
    "test:watch": "jest --watch",
    "test:spec": "jest --coverage",
    "test": "npm run -s lint && npm run -s build && npm run -s test:spec",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/standardschema/javascript.git"
  },
  "keywords": [
    "schema",
    "standard",
    "data",
    "json",
    "validator",
    "types",
    "runtime"
  ],
  "author": {
    "name": "Blake Embrey",
    "email": "hello@blakeembrey.com",
    "url": "http://blakeembrey.me"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/standardschema/javascript/issues"
  },
  "homepage": "https://github.com/standardschema/javascript",
  "jest": {
    "roots": [
      "<rootDir>/src/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "npm run prettier",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/jsonld": "github:types/jsonld",
    "@types/node": "^10.9.4",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "rimraf": "^2.5.4",
    "ts-jest": "^23.1.4",
    "tslint": "^5.0.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "functools": "^3.1.0",
    "iterative": "^1.3.0",
    "jsonld": "^1.0.4"
  }
}
